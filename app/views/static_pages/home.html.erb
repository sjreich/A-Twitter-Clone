<% provide(:title, "Home") %>
<% if current_user == nil %>
  <div class="jumbotron" style="text-align: center">
    <h1>StaticPages#home</h1>
    <p>Find me in app/views/static_pages/home.html.erb</p>
  </div>
<% else %>
  <% x = Relationship.where(listener_id: current_user.id) %>
  <% y = x.collect {|r| r.loudspeaker } %>
  <% z = y.collect {|l| Message.where(user_id: l.id)} %>
  <% @messages = z.flatten %>
  <%= render 'layouts/messageList' %>
<% end %>
