<% provide(:title, "New Message") %>
<h1>New Message</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@message) do |f|%>
      <%= f.text_area :content, placeholder: "Content", 
                                  class: "form-control",
                                  style: "height: 8em" %>

      <%= f.submit "Create message", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>