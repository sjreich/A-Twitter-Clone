<% provide(:title, "Message List") %>
<h1>Messages</h1>

<% @messages.each do |message| %>
  <div class="index-box">
    <p><%= link_to "#{message.content}", message %></p>
    <small><%= message.user.name %> | <%= message.updated_at %></small>
    <br>
    <p>
      <%= link_to "Edit", edit_message_path(message) %>
      |
      <%= link_to "Delete", message, method: :delete,
                                          data: {confirm: "Are you sure?"} %>
    </p>  
  </div>
<% end %>

<h4><%= link_to "Post a new message", new_message_path %></h4>